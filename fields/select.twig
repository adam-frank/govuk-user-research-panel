{% set val = getFieldValue(field.field) %}

{# custom behaviour for the onboarding form. Its hidden by default and shown in javascript if needed #}
<div class="form-group {{ validation_error ? 'error' }} {{ field.field == 'country_c' ? 'js-hidden' }}" id="{{ field.field }}_container">
    <label class="form-label" for="form_{{ field.field }}">
        {% if field.getLabel() %}
            <span class="form-label-bold">{{ field.getLabel() }}</span>
        {% endif %}

        {% if validation_error %}
            <span class="error-message" id="error-message-{{ field.field }}">{{ validation_error.message }}</span>
        {% endif %}
     </label>
    <select id="form_{{ field.field }}" name="{{ field.field }}" class="form-control">
        {% for field_option_key,field_option in field.getDropdownList() %}
            <option {{ field_option_key == val ? 'selected' }} value="{{ field_option_key }}">{{ field_option }}</option>
        {% endfor %}
    </select>
</div>