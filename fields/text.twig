{% set def = field.getDefinition() %}
{% set val = getFieldValue(field.field) %}
<div class="form-group {{ validation_error ? 'error' }}">
    <label class="form-label" for="form_{{ field.field }}">
    {% if field.getLabel() %}
        <span class="form-label-bold">{{ field.getLabel() }}</span>
    {% endif %}
    {% if field.getHelpText() %}
        <span class="form-label-bold">{{ field.getHelpText() }}</span>
    {% endif %}
    {% if validation_error %}
        <span class="error-message" id="error-message-{{ field.field }}">{{ validation_error.message }}</span>
    {% endif %}
    </label>

    {% if def.type == 'text' %}
        <textarea class="form-control" id="form_{{ field.field }}" name="{{ field.field }}" cols="60" rows="10">{{ val }}</textarea>
    {% else %}
        <input class="form-control" id="form_{{ field.field }}" name="{{ field.field }}" type="text" value="{{ val }}"/>
    {% endif %}
</div>